package com.kh.arraysample;

import java.util.Scanner;

public class d {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		//2. 문자 하나 하나 배열에 넣는다.
				//String 안에 있는 문자들을 배열로 담는다. 
				//char 값이라는 문자를 만들어서 만든 문자들을 배열에 넣는다.
				//String 안에 char배열로 만들어주는 녀석 => toCharArray
				// ex) String 안녕하세요 = {'안','녕','하','세','요'}
		
		//3. 문자열에 몇 개 들어가 있는지 개수체크
		//3-1 검색할 문자 scanner를 사용해서 문자검색하기
		System.out.println("문자열을 입력해주세요.");
		String isString = sc.next();
		char[] isChar = isString.toCharArray();
		int arrLength = isChar.length;
		System.out.println(arrLength);
		                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
		System.out.println("문자열을 입력해주세요.");
		char searchChar = sc.next().charAt(1);
		System.out.println(searchChar);
		
		for(int i = 0; i <= arrLength; i++) {
			if(isChar[i] == searchChar) {
				System.out.println("isChar [ " + i + " ]");
			} else {
			}
		}
		
		
		
		
		
	}
}
